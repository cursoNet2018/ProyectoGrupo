@model Project01.Models.department

@{
    ViewBag.Title = "Edit";
}

<div class="page-titleContainer">
    <h2 class="page-title">Edición departamento</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.departmentid)

        <div class="form-group">
            @Html.LabelFor(model => model.dpt_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dpt_Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dpt_Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <button id="Guardar" onclick="" class="btn btn-primary btn-large"><i class="fa fa-floppy-o"> Guardar</i></button>
                <button id="Listado" onclick="Index" class="btn btn-primary btn-large"><i class="fa fa-list-ul"> Listado</i></button>

                <!--
                <input type="submit" value="Guarda" class="btn btn-primary btn-sm" /> |
                @Html.ActionLink("Listado", "Index", null, null, new { @class = "btn btn-primary btn-sm" })
                -->
            </div>
        </div>
    </div>
}
